<h1>タスク一覧</h1>
<%= form_tag [:search, :tasks], method: :get, style: "text-align: right" do  %>
	<%= text_field_tag "q", params[:q]%>
	<%= submit_tag "検索" %>
<% end %>

<ul class="navigation">
	<% if params[:action] == "index"%>
	 <li class="selected">末完了タスク</li>
	 <% else %>
	 <li><%= link_to "末完了タスク", :tasks %></li>
	<% end %>
	<% if params[:action] == "done" %>
	<li class="selected">完了タスク</li>
	<% else %>
	<li><%= link_to "完了タスク", [:done, :tasks] %></li>
	<% end %>
</ul>

<table class="tasks">
	<col class="name" />
	<col class="due_date"/>
	<% @tasks.each do |task| %>
	<tr>
		<td> <%= link_to task.name, task %> </td>
		<td> <%= task.due_date %></td>
		<td> <%= links_for task %> </td>
	</tr>
	<% end %>
</table>
<%= will_paginate(@tasks, previous_label: "前", next_label: "次", inner_window: 1, outer_window: 1)%>
<%= link_to "新規登録", [:new, :task] %>