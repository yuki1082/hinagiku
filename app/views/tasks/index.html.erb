<h1>タスク一覧</h1>

<table class="tasks">
	<col class="name" />
	<col class="due_date"/>
	<% @tasks.each do |task| %>
	<tr>
		<td> <%= link_to task.name, task %> </td>
		<td> <%= task.due_date %></td>
		<td> <%= link_to "修正", [:edit, task] %> </td>
		<td> <%= link_to "完了", [:finish, task], method: :put %> </td>
		<td> <%= link_to "削除", task, method: :delete, confirm: "Are you sure?" %></td>

	</tr>
	<% end %>
</table>

<%= link_to "新規登録", [:new, :task] %>